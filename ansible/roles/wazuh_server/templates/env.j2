# Wazuh Docker deployment environment variables

# Wazuh version
WAZUH_VERSION={{ wazuh_version }}

# Ports
WAZUH_API_PORT={{ wazuh_api_port }}
WAZUH_MANAGER_PORT={{ wazuh_manager_port }}
WAZUH_REGISTRATION_PORT={{ wazuh_registration_port }}
WAZUH_DASHBOARD_PORT={{ wazuh_dashboard_port }}
WAZUH_INDEXER_PORT={{ wazuh_indexer_port }}

# Credentials
WAZUH_ADMIN_USERNAME={{ wazuh_admin_user }}
WAZUH_ADMIN_PASSWORD={{ wazuh_admin_password }}

# Container names
WAZUH_INDEXER_CONTAINER_NAME={{ wazuh_indexer_container_name }}
WAZUH_MANAGER_CONTAINER_NAME={{ wazuh_manager_container_name }}
WAZUH_DASHBOARD_CONTAINER_NAME={{ wazuh_dashboard_container_name }}

# Resource limits
WAZUH_INDEXER_HEAP_SIZE={{ wazuh_indexer_heap_size }}
WAZUH_DASHBOARD_HEAP_SIZE={{ wazuh_dashboard_heap_size }}
WAZUH_MANAGER_HEAP_SIZE={{ wazuh_manager_heap_size }}