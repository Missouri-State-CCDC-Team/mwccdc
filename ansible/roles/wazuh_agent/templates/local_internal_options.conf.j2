# local_internal_options.conf - Generated by Ansible
# This file can be used to customize agent behavior for CCDC environment

# Increase debug level (0-2)
wazuh_debug.level=0

# Enable or disable Windows Eventchannel (default: 1)
windows.debug=0

# Maximum files to monitor: increase for extensive monitoring
syscheck.max_files=25000

# Enable real-time monitoring
syscheck.rt_delay=150

# Rootcheck settings for better performance
rootcheck.sleep=30

# Limit CPU usage during scanning (%)
syscheck.process_priority=10

# Remote commands options
execd.max_restart=3

# Logcollector settings for better performance
logcollector.max_files=1000
logcollector.loop_timeout=2
logcollector.open_attempts=8

# Wazuh DB performance settings
wazuh_db.commit_time_max=3000
wazuh_db.commit_time=2500

# Network communication options
remoted.recv_counter_flush=128
remoted.verify_msg_id=0
remoted.buffer_relax=1

# Agent connection retry intervals
agent.timeout=10